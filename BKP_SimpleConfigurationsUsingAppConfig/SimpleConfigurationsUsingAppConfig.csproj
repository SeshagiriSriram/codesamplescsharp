<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<RootNamespace>csharp.training.congruent.apps</RootNamespace>
	</PropertyGroup>

	
	<PropertyGroup>
    <OutputType>Exe</OutputType>
    <TargetFramework>net9.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>

	
	<ItemGroup>
	  <Compile Remove="ConfigValidation.cs" />
	</ItemGroup>

	
	<ItemGroup>
	  <None Include="App.config" />
	  <None Remove="schemas\sections.xsd" />
	</ItemGroup>

	
	<ItemGroup>
	  <None Include="App.config">
	    <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
	  </None>
	</ItemGroup>

	
	<ItemGroup>
	  <Content Include="schemas\sections.xsd">
	    <CopyToOutputDirectory>Always</CopyToOutputDirectory>
	  </Content>
	</ItemGroup>

	
	<ItemGroup>
	  <PackageReference Include="System.Configuration.ConfigurationManager" Version="9.0.10" />
	</ItemGroup>

</Project>
